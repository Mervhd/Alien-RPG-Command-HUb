<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <!-- Agility -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_agility"
            android:textSize="16sp"
            android:textStyle="bold"

        android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/et_agility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="none"
            android:hint="@string/hint_number_1_6"
            android:inputType="number"
            android:maxWidth="488dp"
            android:minHeight="48dp"
            android:padding="12dp"
            tools:ignore="VisualLintTextFieldSize,DuplicateSpeakableTextCheck" />
    </LinearLayout>

    <!-- Ranged Combat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_ranged_combat"
            android:textSize="16sp"
            android:textStyle="bold"

        android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/et_ranged_combat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="488dp"
            android:hint="@string/hint_number_1_6"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="48dp"
            android:padding="12dp"
            tools:ignore="VisualLintTextFieldSize" />
    </LinearLayout>

    <!-- Mobility -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_mobility"
            android:textSize="16sp"
            android:textStyle="bold"

        android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/et_mobility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="488dp"
            android:hint="@string/hint_number_1_6"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="48dp"
            android:padding="12dp"
            tools:ignore="VisualLintTextFieldSize" />
    </LinearLayout>

    <!-- Piloting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_piloting"
            android:textSize="16sp"
            android:textStyle="bold"

        android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/et_piloting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="488dp"
            android:hint="@string/hint_number_1_6"
            android:inputType="number"
            android:autofillHints="none"
            android:minHeight="48dp"
            android:padding="12dp"
            tools:ignore="VisualLintTextFieldSize" />
    </LinearLayout>

</LinearLayout>
