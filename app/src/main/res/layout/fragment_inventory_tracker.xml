<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alienrpgcommandhub.ui.InventoryTracker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gear Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_gear"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Gear Fields -->
        <EditText
            android:id="@+id/et_gear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear1"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear2"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear3"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear4"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear5"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear6"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear7"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear8"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear9"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_gear10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear10"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <!-- Header for Weapon Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_weapon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_bonus"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_damage"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_range"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- Weapon Fields -->
        <!-- Weapon 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:importantForAutofill="no">

            <EditText
                android:id="@+id/et_weapon1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon1"
                android:inputType="text"
                android:minHeight="48dp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_weapon1_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon1_bonus"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon1_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon1_damage"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon1_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon1_range"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Weapon 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:importantForAutofill="no">

            <EditText
                android:id="@+id/et_weapon2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon2"
                android:inputType="text"
                android:minHeight="48dp"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/et_weapon2_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon2_bonus"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon2_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon2_damage"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon2_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon2_range"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Weapon 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:importantForAutofill="no">

            <EditText
                android:id="@+id/et_weapon3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon3"
                android:inputType="text"
                android:minHeight="48dp"
                android:importantForAutofill="no"/>

            <EditText
                android:id="@+id/et_weapon3_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon3_bonus"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon3_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon3_damage"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon3_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon3_range"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Weapon 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:importantForAutofill="no">

            <EditText
                android:id="@+id/et_weapon4_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon4"
                android:inputType="text"
                android:minHeight="48dp"
                android:importantForAutofill="no"/>

            <EditText
                android:id="@+id/et_weapon4_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon4_bonus"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon4_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon4_damage"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_weapon4_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/content_description_weapon4_range"
                android:importantForAutofill="no"
                android:inputType="text"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Armor Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_armor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_armor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_armor_name"
            android:inputType="text"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/et_armor_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_armor_rating"
            android:inputType="number"
            android:minHeight="48dp"
            android:importantForAutofill="no" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_save_inventory"
            android:backgroundTint="@color/green_500"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:maxWidth="320dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
