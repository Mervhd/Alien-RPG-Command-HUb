<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryTracker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Gear Section -->
        <!-- Gear -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_gear"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_gear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear1"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear2"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear3"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear4"
