                android:inputType="text"
                android:autofillHints="none"/>

            <EditText
                android:id="@+id/et_weapon4_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_damage"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon4_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_range"
                android:inputType="text"
                android:autofillHints="none" />
        </LinearLayout>

        <!-- Armor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_armor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_armor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_armor_name"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_armor_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_armor_rating"
            android:inputType="text"
            android:autofillHints="none" />

    </LinearLayout>
</ScrollView>
