            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear5"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear6"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear7"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear8"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear9"
            android:inputType="text"
            android:autofillHints="none" />

        <EditText
            android:id="@+id/et_gear10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_gear10"
            android:inputType="text"
            android:autofillHints="none" />

        <!-- Weapons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_weapons"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Weapon 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_weapon1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon1"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon1_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_bonus"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon1_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_damage"
                android:inputType="text"
                android:autofillHints="none"/>

            <EditText
                android:id="@+id/et_weapon1_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_range"
                android:inputType="text"
                android:autofillHints="none" />
        </LinearLayout>

        <!-- Weapon 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_weapon2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon2"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon2_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_bonus"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon2_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_damage"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon2_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_range"
                android:inputType="text"
                android:autofillHints="none" />
        </LinearLayout>

        <!-- Weapon 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_weapon3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon3"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon3_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_bonus"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon3_damage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_damage"
                android:inputType="text"
                android:autofillHints="none"/>

            <EditText
                android:id="@+id/et_weapon3_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon_range"
                android:inputType="text"
                android:autofillHints="none" />
        </LinearLayout>

        <!-- Weapon 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_weapon4_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_weapon4"
                android:inputType="text"
                android:autofillHints="none" />

            <EditText
                android:id="@+id/et_weapon4_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
